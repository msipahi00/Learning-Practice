
<%- include("partials/header")%>

<h1>Home</h1>
<p><%=homeStartingContent%></p>

<% for(i=0;i<posts.length;i++) { %>
  <h1><%=posts[i].postTitle%></h1>
  <% if (posts[i].postBody.length >100){ %>
    <p><%=posts[i].postBody.substring(0,100) + "..."%> <a href="/posts/ + <%=posts[i].postTitle%>">Read More</a></p>

  <% }else{ %>
    <p><%=posts[i].postBody%></p>
<%  } %>

<%}%>

<%- include("partials/footer")%>
